<UserControl x:Class="Client.Views.ConnectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Views"
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.7">
                <GradientStop Color="{StaticResource secondaryBackColor1}" Offset="0"/>
                <GradientStop Color="{StaticResource secondaryBackColor2}" Offset="0.7"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Width="450" Height="41"
                Background="WhiteSmoke"
                BorderBrush="Gray"
                BorderThickness="2"
                CornerRadius="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Padding="10" Margin="0,43,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Session Text -->
                <TextBlock Grid.Column="0"
                   FontSize="14"
                   TextWrapping="Wrap"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left">
                    <Run Text="Your SessionId: " />
                    <Run Text="{Binding Session}" />
                </TextBlock>

                <!-- Copy Button -->
                <Button Grid.Column="1"
                Width="18"
                Height="18"
                BorderThickness="0"
                Background="Transparent"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Command="{Binding CopySessionCommand}"
                ToolTip="Copy">
                    <fa:IconImage Icon="Clone"
                          Width="16"
                          Height="16" />
                </Button>

                <!-- Refresh Button -->
                <Button Grid.Column="2"
                Width="18"
                Height="18"
                BorderThickness="0"
                Background="Transparent"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Command="{Binding ReconnectCommand}"
                ToolTip="Reconnect">
                    <fa:IconImage Icon="Refresh"
                          Width="16"
                          Height="16" />
                </Button>
            </Grid>
        </Border>

        <Button Content="Send Input" HorizontalAlignment="Left" Height="72" Margin="108,174,0,0" VerticalAlignment="Top" Width="99" Click="Button_Click"/>
        <Button Content="Stop send Input" HorizontalAlignment="Left" Height="72" Margin="239,174,0,0" VerticalAlignment="Top" Width="105" Click="Button_Click_1"/>
        <Button Content="Restart"
        Command="{Binding ReconnectCommand}"
        HorizontalAlignment="Left"
        Height="72"
        Margin="375,174,0,0"
        VerticalAlignment="Top"
        Width="109"/>
        <Button Content="Join Session"
            Command="{Binding JoinSessionCommand}"
            HorizontalAlignment="Left" 
            Height="72" 
            Margin="510,174,0,0" 
            VerticalAlignment="Top" 
            Width="118" 
            RenderTransformOrigin="0.847,0.556"/>
        <TextBox FontSize="14" 
                FontWeight="Bold"
                TextAlignment="Center" 
                 HorizontalAlignment="Center" 
                 Height="26" 
                 Margin="0,116,0,0" 
                 TextWrapping="Wrap" 
                 
                 Text="{Binding JoinSessionId, UpdateSourceTrigger=PropertyChanged}" 
                 VerticalAlignment="Top" 
                 Width="404"/>
        <Button Content="Start streaming"
                HorizontalAlignment="Left" 
                Height="64" 
                Margin="108,277,0,0" 
                VerticalAlignment="Top" 
                Width="99" Click="Button_Click_2"/>
        <Button Content="Stop streaming"
                HorizontalAlignment="Left" 
                Height="64" Margin="239,277,0,0" 
                VerticalAlignment="Top" 
                Width="105" Click="Button_Click_3"/>
        <Button Content="Accept Streaming" HorizontalAlignment="Left" Height="77" Margin="376,277,0,0" VerticalAlignment="Top" Width="108" Click="Button_Click_4"/>



    </Grid>
</UserControl>
